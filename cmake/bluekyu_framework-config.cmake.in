cmake_minimum_required(VERSION 3.10)

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

include(${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@-targets.cmake)
include(${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@-macro.cmake)

set(@PROJECT_NAME@_VERSION "@PROJECT_VERSION@")
set(@PROJECT_NAME@_INSTALL_DIR ${PACKAGE_PREFIX_DIR})

get_target_property(@PROJECT_NAME@_IMPORTED_CONFIGURATIONS @PROJECT_NAME@::@PROJECT_NAME@ IMPORTED_CONFIGURATIONS)
if(NOT RELWITHDEBINFO IN_LIST @PROJECT_NAME@_IMPORTED_CONFIGURATIONS)
    set_target_properties(@PROJECT_NAME@::@PROJECT_NAME@ PROPERTIES
        MAP_IMPORTED_CONFIG_RELWITHDEBINFO RELEASE
    )
endif()

if(NOT MINSIZEREL IN_LIST @PROJECT_NAME@_IMPORTED_CONFIGURATIONS)
    set_target_properties(@PROJECT_NAME@::@PROJECT_NAME@ PROPERTIES
        MAP_IMPORTED_CONFIG_MINSIZEREL RELEASE
    )
endif()

message(STATUS "@PROJECT_NAME@ version: ${@PROJECT_NAME@_VERSION}")

check_required_components(@PROJECT_NAME@)
